<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical"
    tools:context=".Resources">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/year1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/year_first_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="First Year"
        app:layout_constraintStart_toStartOf="@id/year1"
        app:layout_constraintEnd_toEndOf="@id/year1"
        app:layout_constraintTop_toBottomOf="@id/year1" />

    <ImageView
        android:id="@+id/year2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/year_second_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Second Year"
        app:layout_constraintStart_toStartOf="@id/year2"
        app:layout_constraintEnd_toEndOf="@id/year2"
        app:layout_constraintTop_toBottomOf="@id/year2" />

    <ImageView
        android:id="@+id/year3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/year_third_icon"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Year"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/year3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year3"
        app:layout_constraintStart_toStartOf="@id/year3" />

    <ImageView
        android:id="@+id/year4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/year_fourth_icon"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Fourth Year"
        app:layout_constraintTop_toBottomOf="@id/year4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/year4"
        app:layout_constraintStart_toStartOf="@id/year4" />


</androidx.constraintlayout.widget.ConstraintLayout>