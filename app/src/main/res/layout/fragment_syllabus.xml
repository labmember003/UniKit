<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.falcon.unikit.ui.main.syllabus.SyllabusViewModel"
            />
        <import type="android.view.View"/>
        <variable
            name="sale"
            type="java.lang.Boolean"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.syllabus.SyllabusFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvErrorMessageContents"
            android:visibility="@{sale ? View.VISIBLE : View.GONE}"
            android:text="Coming Soon :)"
            android:translationZ="90dp"
            android:layout_marginTop="160dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/coming_soon_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/coming_soon_cat"
            app:lottie_autoPlay="true"
            android:layout_marginRight="15dp"
            app:lottie_loop="true"
            android:visibility="@{sale ? View.VISIBLE : View.GONE}"
            />
    </FrameLayout>
</layout>